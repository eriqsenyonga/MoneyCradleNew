<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sentayzo.app.BudgetFragment" >

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange" >

        <!-- Your card content -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/budget_title"
                style="?android:textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GENERAL BUDGET" />

            <TextView
                android:id="@+id/budget_spent"
                style="?android:textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/budget_title"
                android:text="Ush 40,000" />

            <TextView
                android:id="@+id/budget_total"
                style="?android:textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/budget_title"
                android:text="of Ush 100,000" />

            <TextView
                android:id="@+id/total_bar"
                style="?android:textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@id/budget_total"
                android:layout_marginBottom="3dp"
                android:background="@color/super_light_grey"
                android:paddingBottom="15dp" />

            <TextView
                android:id="@+id/spent_bar"
                style="?android:textAppearanceMedium"
                android:layout_width="140dp"
                android:layout_height="15dp"
                android:layout_below="@id/budget_total"
                android:background="@color/graph_red"
                android:paddingBottom="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange" >

        <!-- Your card content -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/budget_titleS"
                style="?android:textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CATEGORIES BUDGET" />

            <TextView
                android:id="@+id/budget_spentS"
                style="?android:textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/budget_titleS"
                android:text="Ush 70,000" />

            <TextView
                android:id="@+id/budget_totalS"
                style="?android:textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/budget_titleS"
                android:text="of Ush 95,000" />

            <TextView
                android:id="@+id/total_barS"
                style="?android:textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@id/budget_totalS"
                android:layout_marginBottom="3dp"
                android:background="@color/super_light_grey"
                android:paddingBottom="15dp" />

            <TextView
                android:id="@+id/spent_barS"
                style="?android:textAppearanceMedium"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_below="@id/budget_totalS"
                android:background="@color/graph_red"
                android:paddingBottom="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
       android:progressDrawable="@drawable/budget_progress_bar"
       
       
     />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="112000"
            android:progress="45000" />
   

</LinearLayout>