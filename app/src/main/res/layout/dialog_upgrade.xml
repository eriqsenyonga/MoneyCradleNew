<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">


    <ImageView
        android:id="@+id/iv_upgrade_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_upgrade" />


    <TextView
        android:id="@+id/tv_upgrade_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/upgrade_unlimited_accounts"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_upgrade_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="8dp"
        android:text="@string/get_more_premium" />

    <android.support.v7.widget.CardView
        android:id="@+id/b_show_plans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/accent"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/show_premium_plans"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/b_try_for_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/accent"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/card_border"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/try_for_free"
            android:textColor="@color/accent"
            android:textSize="18sp" />


    </android.support.v7.widget.CardView>

</LinearLayout>