<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/calc_dialog_display"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/all_clear"
        android:layout_marginBottom="2dp"
        android:background="#000000"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:gravity="right"
        android:text="47 + 34"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/calc_dialog_display_fake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/calc_dialog_display"
        android:layout_alignRight="@+id/calc_dialog_display"
        android:background="#000000"
        android:clickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:focusable="false"
        android:gravity="right"
        android:text="=81"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/enter_total"
        android:layout_width="150dp"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calc_dialog_display"
        android:src="@drawable/ic_arrow_back"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/all_clear"
        android:layout_width="150dp"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/calc_dialog_display"
        android:layout_toRightOf="@id/enter_total"
        android:text="AC"
        android:textSize="@dimen/calc_dialog_text_size" />


    <Button
        style="?android:attr/borderlessButtonStyle"

        android:id="@+id/seven"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/enter_total"
        android:text="7"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/eight"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/enter_total"
        android:layout_toRightOf="@id/seven"
        android:text="8"
        android:textSize="@dimen/calc_dialog_text_size"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/nine"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/enter_total"
        android:layout_toRightOf="@id/eight"
        android:text="9"
        android:textSize="@dimen/calc_dialog_text_size"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/division"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/enter_total"
        android:layout_toRightOf="@id/nine"
        android:text="รท"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/four"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/seven"
        android:text="4"
        android:textSize="@dimen/calc_dialog_text_size"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/five"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/seven"
        android:layout_toRightOf="@id/four"
        android:text="5"
        android:textSize="@dimen/calc_dialog_text_size"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/six"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/seven"
        android:layout_toRightOf="@id/five"
        android:text="6"
        android:textSize="@dimen/calc_dialog_text_size"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/multiply"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/seven"
        android:layout_toRightOf="@id/six"
        android:text="x"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/one"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/four"
        android:text="1"
        android:textSize="@dimen/calc_dialog_text_size"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/two"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/four"
        android:layout_toRightOf="@id/one"
        android:text="2"
        android:textSize="@dimen/calc_dialog_text_size"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/three"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/four"
        android:layout_toRightOf="@id/two"
        android:text="3"
        android:textSize="@dimen/calc_dialog_text_size"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/subtract"
        android:layout_width="@dimen/calc_dialog_button_width"
        android:layout_height="@dimen/calc_dialog_button_height"
        android:layout_below="@id/four"
        android:layout_toRightOf="@id/three"
        android:text="-"
        android:textSize="@dimen/calc_dialog_text_size" />

    <Button
        android:id="@+id/decimal"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/one"
        android:text="."
        android:textSize="25sp"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/zero"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@id/one"
        android:layout_toRightOf="@id/decimal"
        android:text="0"
        android:textSize="25sp"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/equals"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@id/one"
        android:layout_toRightOf="@id/zero"
        android:text="="
        android:textSize="25sp" />

    <Button
        android:id="@+id/addition"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@id/one"
        android:layout_toRightOf="@id/equals"
        android:text="+"
        android:textSize="25sp" />
</RelativeLayout>
